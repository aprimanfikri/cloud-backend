generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model File {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  size      BigInt   @db.BigInt
  type      String?
  folder_id String?
  iv        String?
  date      DateTime @default(now()) @db.Timestamptz

  chunks Chunk[]

  @@index([folder_id])
}

model Chunk {
  id          BigInt  @id @default(autoincrement())
  file_id     String  @db.Uuid
  chunk_index Int
  message_id  String
  url         String
  iv          String?
  size        BigInt  @db.BigInt

  file File @relation(fields: [file_id], references: [id], onDelete: Cascade)

  @@index([file_id])
}
